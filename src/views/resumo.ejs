<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Resumo de Consumo</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body class="bg-light">

  <div class="container py-4">
    <h1 class="mb-3">ðŸ“Š Resumo de Consumo</h1>

    <div class="row mb-4">
      <div class="col-md-6">
        <div class="card text-bg-light mb-3">
          <div class="card-body">
            <h5 class="card-title">ðŸ’° Custo Total</h5>
            <p class="card-text fs-4">R$ <%= total %></p>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card text-bg-light mb-3">
          <div class="card-body">
            <h5 class="card-title">ðŸ“ˆ MÃ©dia por Dispositivo</h5>
            <p class="card-text fs-4">R$ <%= media %></p>
          </div>
        </div>
      </div>
    </div>

    <canvas id="grafico" height="100"></canvas>

    <div class="mt-4">
      <a href="/dispositivos" class="btn btn-secondary">â¬… Voltar</a>
    </div>
  </div>

  <script>
    const ctx = document.getElementById('grafico').getContext('2d');
    const grafico = new Chart(ctx, {
      type: 'bar',
      data: {
        labels: <%- JSON.stringify(dispositivos.map(d => d.nome)) %>,
        datasets: [{
          label: 'Custo Mensal (R$)',
          data: <%- JSON.stringify(dispositivos.map(d => d.custoMes)) %>,
          backgroundColor: 'rgba(0, 123, 255, 0.6)',
          borderColor: 'rgba(0, 123, 255, 1)',
          borderWidth: 1
        }]
      },
      options: {
        scales: {
          y: {
            beginAtZero: true
          }
        }
      }
    });
  </script>

</body>
</html>
